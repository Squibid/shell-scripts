#!/bin/sh

# A dmenu wrapper script for system functions.
export WM="dwm"
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(echo -e "choose a power option:\n\nğŸ” lock\nğŸ”Œ shutdown\nğŸ” reboot\nğŸ’¤ sleep\n" | dmenu -l 20 -p 'powr')" in
	'ğŸ” lock') slock ;;
        'ğŸ”Œ shutdown') $ctl poweroff -i ;;
      	'ğŸ” reboot') $ctl reboot -i ;;
        'ğŸ’¤ sleep') slock $ctl suspend -i ;;
	*) exit 1 ;;
esac
